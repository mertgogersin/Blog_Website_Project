@model List<ArticleDTO>
@{
    ViewData["Title"] = "UserArticlesPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="p-4 p-md-5 mb-4 text-white rounded bg-dark text-center d-flex justify-content-center">
        <div class="col-md-6 px-0">
            <h1 class="display-4 fst-italic">MY ARTICLES</h1>
        </div>
    </div>
</div>
<div class="container">
    @foreach (ArticleDTO item in Model)
    {
        <div class="row">
            <div class="col-md-8">
                <div class="post-preview">
                    <a style="text-decoration: none;" class="text-black article" href=@("/Article/ArticleDetailsPage/"+item.ArticleID)>
                        <h2 class="post-title">@item.Title</h2>
                        <h3 class="post-subtitle text-truncate">@item.Content</h3>
                    </a>
                    <p class="post-meta text-black-50">
                        Posted on @item.CreatedDate.ToString("dd MMM yyy")
                    </p>

                </div>
                <hr class="my-4" />
            </div>
            <div class="col-md-4">
                <a asp-controller="Article" asp-action="Index" asp-route-id="@item.ArticleID" type="button" class="btn btn-warning">EDIT</a>
                <a type="button" asp-controller="Article" asp-action="DeleteArticle" asp-route-id="@item.ArticleID" class="btn btn-danger">DELETE</a>
            </div>
        </div>
    }
</div>

